{
  "compilerOptions": {
    "outDir": "dist",

    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",

    "types": ["bun-types"],
    "noEmit": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "drizzle.config.ts"]
}
